# Runtime
OUTPUT_DIR=output
LOG_LEVEL=INFO

# LLM provider (ollama|hf)
LLM_PROVIDER=ollama

# Ollama
OLLAMA_ENDPOINT=http://localhost:11434/api/generate
OLLAMA_MODEL=qwen:4b
OLLAMA_NUM_CTX=4096
OLLAMA_NUM_PREDICT=512
OLLAMA_TEMP=0.2
OLLAMA_TOP_P=0.9
OLLAMA_TOP_K=40
OLLAMA_REPEAT_PENALTY=1.05

# HF (optional)
HF_MODEL_ID=Qwen/Qwen2.5-7B-Instruct
HF_DTYPE=bfloat16
HF_DEVICE_MAP=auto
HF_TRUST_REMOTE_CODE=false
HF_HOME=./models
